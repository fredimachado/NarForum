@using NarForumAdmin.Models.Contact
<Modal @ref="modal" ModalTitle="Detail Contact">
    @if (Model is not null)
    {
        <table class="table table-bordered table-hover caption-top forum-table">
            <thead>
                <tr>
                    <th style="width:50%">Field</th>
                    <th style="width:50%">Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="align-middle">Id</td>
                    <td class="align-middle">@Model.Id</td>
                </tr>
                <tr>
                    <td class="align-middle">Contact Type</td>
                    <td class="align-middle">
                        @if(Model.Type == Models.Enums.ContactTypeVM.Bug)
                        {
                             @("Bug");
                        }
                        @if (Model.Type == Models.Enums.ContactTypeVM.Request)
                        {
                            @("Request");
                        }
                        @if (Model.Type == Models.Enums.ContactTypeVM.Other)
                        {
                            @("Other")
                        }
                    </td>
                </tr>
                <tr>
                    <td class="align-middle">Sender</td>
                    <td class="align-middle">@Model.NameSurname</td>
                </tr>
                <tr>
                    <td class="align-middle">Email</td>
                    <td class="align-middle">@Model.Email</td>
                </tr>
                <tr>
                    <td class="align-middle">Website</td>
                    <td class="align-middle">@Model.WebSite</td>
                </tr>
                <tr>
                    <td class="align-middle">Subject</td>
                    <td class="align-middle">@Model.Subject</td>
                </tr>
                <tr>
                    <td class="align-middle">Message</td>
                    <td class="align-middle">@Model.Message</td>
                </tr>
            </tbody>
        </table>
    }
</Modal>

@code {
    Modal? modal;

    [Parameter]
    public ContactVM? Model { get; set; }

    [Parameter]
    public EventCallback<int> Callback { get; set; }

    protected override void OnInitialized()
    {

    }

    public void ShowModal()
    {
        modal?.ShowModal();
    }

    public void CloseModal()
    {
        modal?.CloseModal();
    }
}